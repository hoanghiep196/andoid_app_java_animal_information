<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dragonbutterfly">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imageView_dragonbutterfly"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chuonchuon_background2"
            app:layout_constraintBottom_toTopOf="@+id/textview_dragonbutterfly"
            tools:layout_editor_absoluteX="16dp">

        </ImageView>
        <ImageView
            android:id="@+id/lovedragonbutterfly"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/heart_image2"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_dragonbutterfly"
            app:layout_constraintRight_toRightOf="@id/imageView_dragonbutterfly">
        </ImageView>
        <ImageView
            android:id="@+id/lovedragonbutterfly_full"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/heart_image3"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_dragonbutterfly"
            app:layout_constraintRight_toRightOf="@id/imageView_dragonbutterfly"
            tools:ignore="NotSibling">
        </ImageView>
        <TextView
            android:id="@+id/textview_dragonbutterfly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dragonbutterfly"
            android:textAlignment="inherit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>