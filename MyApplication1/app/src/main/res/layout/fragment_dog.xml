<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dog">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imageView_dog"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dog_backfround2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"></ImageView>
        <ImageView
            android:id="@+id/lovedog"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/heart_image2"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_dog"
            app:layout_constraintRight_toRightOf="@id/imageView_dog"
            android:visibility="invisible">
        </ImageView>
        <ImageView
            android:id="@+id/lovedog_full"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/heart_image3"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toBottomOf="@id/imageView_dog"
            app:layout_constraintRight_toRightOf="@id/imageView_dog"
            tools:ignore="NotSibling"
            android:visibility="visible"
            >
        </ImageView>
        <TextView
            android:id="@+id/textview_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:soundEffectsEnabled="true"
            android:text="@string/dog"
            android:textAlignment="inherit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_dog" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>